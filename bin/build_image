#!/usr/bin/env bash

BUILD_OPTS="--no-cache"

cd "$(cd "$(dirname "$0")/.."; pwd)"

source bin/commons.sh

if [[ -z "$IMAGE_NAME" ]]; then
  echo "No image specified..."
  exit 1
fi

function build_image() {
  local image_name=$1
  local repo=$GITHUB_CONTAINER_REGISTRY_URL
  local image="$repo/$image_name"

  echo "Building '$image'..."
  docker build $BUILD_OPTS -t "$image" "src/$image_name"

  local image_tag="$image:$(get_version "$image_name")"
  echo "Tagging '$image' with '$image_tag' and '$image:latest'"
  docker tag "$image" "$image_tag"
  docker tag "$image" "$image:latest"
}

build_image "$IMAGE_NAME"
