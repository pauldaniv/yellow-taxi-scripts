#!/usr/bin/env bash

GITHUB_CONTAINER_REGISTRY_URL="ghcr.io/pauldaniv/yellow-taxi-scripts"

function push_image() {
    local image=$1
    local repo=$2
    local image_tag="$repo/$image:latest"
    echo "Pushing '$image_tag' image..."
    docker push $image_tag
}

function build_and_push_top_level_image() {
  push_image "$image" "$GITHUB_CONTAINER_REGISTRY_URL"
}

cd "$(cd "$(dirname "$0")/.."; pwd)"

if [[ ! -z "$1" ]]; then
  echo "No image specified..."
  exit 1
fi

build_and_push_top_level_image "$1"
