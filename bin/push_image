#!/usr/bin/env bash

cd "$(cd "$(dirname "$0")/.."; pwd)"

source bin/commons.sh

if [[ -z "$IMAGE_NAME" ]]; then
  echo "No image specified..."
  exit 1
fi

function push_image() {
  local image_name=$1
  local repo=$GITHUB_CONTAINER_REGISTRY_URL
  local image="$repo/$image_name"
  local image_tag="$image:$(get_version "$image_name")"

  echo "Pushing '$image_tag' and '$image:latest' tags..."
  docker push "$image_tag"
  docker push "$image:latest"
}

push_image "$IMAGE_NAME"
